<h1>Editing Book</h1>

<% if flash[:alert1] %>

  <table class="alert-container">
      <tr>
        <th>
            <p class="alert-header">error</p>
        </th>
      </tr>
      <tr>
        <td>
            <ul>
              <% flash[:alert1].each do |message| %>
                <li><p class="alert-message"><%= message %></p></li>
              <% end %>
            </ul>
        </td>
      </tr>
  </table>

<% end %>


<%= form_for(@book) do |bk| %>
    <p class="index-text">
    Title<br>
    <%= bk.text_field :title %>
    </p>

    <p class="index-text">
    Body<br>
    <%= bk.text_area :body %>
    </p>

    <div class="buttn">
    <%= bk.submit 'Update Book' %>
    </div>
<% end %>


