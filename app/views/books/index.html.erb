<!--  一覧表示  -->
<h1>Books</h1>


<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>   </th>
  </tr>

  <% @books.each do |bk| %>
    <tr>
      <td>
      <%= bk.title %>
      </td>
      <td>
      <%= bk.body %>
      </td>
      <td class="table-width">
      <%=link_to "Show", book_path(bk.id) %>
      <%=link_to "Edit", edit_book_path(bk.id) %>
      <%=link_to "Destroy", book_path(bk.id), method: :delete, "data-confirm" => "Are you Sure?" %>
      </td>
    </tr>
  <% end %>

</table>



<h2>New book</h2>


<% if flash[:alert1] %>

  <table class="alert-container">
      <tr>
        <th>
            <p class="alert-header">error</p>
        </th>
      </tr>
      <tr>
        <td>
            <ul>
              <% flash[:alert1].each do |message| %>
                <li><p class="alert-message"><%= message %></p></li>
              <% end %>
            </ul>
        </td>
      </tr>
  </table>

<% end %>

<%= form_for(@book) do |book| %>

    <p class="index-text">Title</p>
    <%= book.text_field :title %>
    <br>
    <p class="index-text">Body</p>
    <%= book.text_area :body %>
    <br>
    <%= book.submit 'Create Book' %>

<% end %>

